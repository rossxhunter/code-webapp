<p id="notice"><%= notice %></p>

<h1>Track Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order</th>
      <th>Course</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @track_templates.each do |track_template| %>
      <tr>
        <td><%= track_template.name %></td>
        <td><%= track_template.order %></td>
        <td><%= track_template.course_id %></td>
        <td><%= track_template.description %></td>
        <td><%= link_to 'Show', track_template %></td>
        <td><%= link_to 'Edit', edit_track_template_path(track_template) %></td>
        <td><%= link_to 'Destroy', track_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Track Template', new_track_template_path %>
