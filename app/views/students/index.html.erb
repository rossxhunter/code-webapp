<h1 class="display-4 row">All students</h1>

<table id="student_table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>
  </thead>
    <% current_teacher.organisation.students.each do |s| %>
      <tbody>
        <td><%= s.name %></td>
        <td><%= s.email %></td>
        <td>
          <%= link_to "View", s,class: "btn btn-primary" %>
          <%= link_to "Edit", edit_student_path(s), class: "btn btn-primary"%>
          <%= link_to "Delete", student_path(s), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary"%>
        </td>
      </tbody>
    <% end %>
    <td><%= link_to "Add Student", new_student_path, class: "btn btn-primary" %></td>
    <td> </td>
    <td> </td>
</table>
